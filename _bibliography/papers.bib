@inproceedings{willard2025combined,
   author    = {Willard<sup>‚Ä†</sup>, Charles and Puglisi<sup>‚Ä†</sup>, Lemuel and Ravi, Daniele and Dmitrieva, Mariia and Mattiesing, Rozemarijn M and Barkhof, Frederik and Alexander, Daniel C and Harlow, Danielle E and Piani-Meier, Daniela and Eshaghi, Arman},
   title     = {Combined magnetic resonance imaging and serum analysis reveals distinct multiple sclerosis types},
